{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": "/",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "noImplicitThis": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ],
        "outDir": ".next",
        "rootDirs": [
            "pages",
            "src"
        ]
    },
    "exclude": [
        "node_modules",
        ".next",
        "out"
    ]
}