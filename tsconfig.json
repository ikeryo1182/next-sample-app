{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "/",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "noImplicitThis": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "outDir": ".next",
    "rootDirs": [
      "pages",
      "src"
    ]
  },
  "exclude": [
    "node_modules",
    ".next"
  ]
}